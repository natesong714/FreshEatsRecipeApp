<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipeMainPage">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/exerciseName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:text="Exercise"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.066"
            android:background="@color/colorPrimary"
            android:text="Wgt"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/rep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.066"
            android:text="Reps"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/weight6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.066"
            android:background="@color/colorPrimary"
            android:text="Wgt"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/rep6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.066"
            android:text="Reps"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/weight7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.066"
            android:background="@color/colorPrimary"
            android:text="Wgt"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/rep7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.066"
            android:text="Reps"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/weight8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.066"
            android:background="@color/colorPrimary"
            android:text="Wgt"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/rep8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.066"
            android:text="Reps"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/weight9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.066"
            android:background="@color/colorPrimary"
            android:text="Wgt"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/rep9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.066"
            android:text="Reps"
            android:textSize="13sp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_workouts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayout">

    </androidx.recyclerview.widget.RecyclerView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/recycler_view_workouts"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:clickable="true"
        android:focusable="true"
        app:rippleColor="@color/colorPrimaryDark"
        app:srcCompat="@android:drawable/ic_input_add" />


</RelativeLayout>